<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.CurrentWeatherFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <ImageView
            android:id="@+id/current_weather_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_snow" />

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingTop="5dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/location_image"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_margin="5dp"
                    android:contentDescription="@string/current_location_cd"
                    tools:src="@drawable/ic_place_24dp"/>

                <TextView
                    android:id="@+id/txtCurrentLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/location_image"
                    android:layout_toRightOf="@id/location_image"
                    tools:text="@string/current_location" />

                <ImageView
                    android:id="@+id/wind_speed"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_below="@id/location_image"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:contentDescription="@string/wind_speed_cd"
                    tools:src="@drawable/ic_wind_speed_black_24dp" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/txtWindSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtCurrentLocation"
                    android:layout_toEndOf="@id/wind_speed"
                    android:layout_toRightOf="@id/wind_speed"
                    tools:text="@string/wind_speed">

                </TextView>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</FrameLayout>
