<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="layout.CurrentWeatherFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:id="@+id/iv_current_weather_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"

            android:contentDescription="@string/cd_current_weather"
            android:paddingTop="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_current_weather_placeholder" />


        <ImageView
            android:id="@+id/iv_location_image"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@id/tv_weather_description"
            android:layout_margin="5dp"
            android:contentDescription="@string/cd_current_location"
            tools:src="@drawable/ic_place_24dp" />


        <TextView
            android:id="@+id/tv_max_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textSize="28sp"
            tools:text="@string/max_temperature" />

        <TextView
            android:id="@+id/tv_min_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_max_temperature"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            tools:text="@string/min_temperature" />

        <TextView
            android:id="@+id/tv_current_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_weather_description"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/iv_location_image"
            android:layout_toRightOf="@id/iv_location_image"
            tools:text="@string/current_location" />

        <ImageView
            android:id="@+id/iv_wind_speed"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@id/iv_location_image"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/cd_wind_speed"
            tools:src="@drawable/ic_wind_speed_black_24dp" />

        <TextView
            android:id="@+id/tv_wind_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_current_location"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/iv_wind_speed"
            android:layout_toRightOf="@id/iv_wind_speed"
            tools:text="@string/wind_speed" />

        <ImageView
            android:id="@+id/iv_cloud_percentage"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@+id/iv_wind_speed"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/cd_cloud_percentage"
            tools:src="@drawable/ic_cloud_percentage_24dp" />

        <TextView
            android:id="@+id/tv_cloud_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_wind_speed"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/iv_cloud_percentage"
            android:layout_toRightOf="@id/iv_cloud_percentage"
            tools:text="@string/cloud_percentage" />

        <TextView
            android:id="@+id/tv_weather_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_current_weather_image"
            android:textSize="26sp"
            tools:text="@string/weather_description" />


    </RelativeLayout>

</ScrollView>